%div{:id => 'customer_header', :class => 'header_container'}
  %div{:id => 'customer_search'}
    %ul{:class => 'alphabet_nav'}
      - ('A'..'Z').each do |letter|
        %li
          %a{:href => "##{letter}", :class => 'button dark'}= letter
    = form_for :customer_search, :url => root_path do |f|
      %div
        = f.text_field :body_contains, :id => 'customer_search', :placeholder => 'Search for a customer...'
%ul{:id => 'customer_nav', :class => 'tab_nav'}
  %li
    %a{:href => '#customer_form', :class => 'customer_form'} Customer
  %li
    %a{:href => '#customer_search_results', :class => 'customer_search_results'} Search Results
%div{:id => 'customer_pages', :class => 'page_container'}
  %div{:id => 'customer_form'}
    = render :partial => 'customer_form'
    %div{:id => 'customer_history'}
      %h3 Transaction History
      %table
        %thead
          %tr
            %th Date
            %th Amount
        %tbody
          %tr
            %td 12/31/00 4:32PM
            %td $200
  %div{:id => 'customer_search_results'}
    %table
      %thead
        %tr
          %th Name
          %th Address
          %th Phone
          %th Email
          %th Store Credit
          %th Drivers License
          %th Flagged
          %th Notes
      %tbody
        %tr
          %td Joe Blow
          %td 1800 Penn Ave.
          %td 555-555-5555
          %td joe@blow.com
          %td $100.00
          %td NE - H122000000
          %td No
          %td Lorem Ipsum...