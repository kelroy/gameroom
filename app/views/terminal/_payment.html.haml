%div{:id => 'payment_action', :class => 'payment_line'}
  = form_for :payment_action, :url => root_path do |f|
    %ul
      %li 
        %span{:class => 'payment_pill'} Credit Applied
      %li
        = f.text_field :credit_value, :placeholder => '0.00'
      - (1..11).each do |n|
        %li
          %a{:href => '#payment_scale', :class => 'button dark'} *
      %li
        = f.text_field :cash_value, :placeholder => '0.00'
      %li 
        %span{:class => 'payment_pill'} Cash Given
      %li
        %span{:class => 'payment_symbol'} =
      %li
        %span{:class => 'payment_pill payment_pill_action'} Change Due: $0.00