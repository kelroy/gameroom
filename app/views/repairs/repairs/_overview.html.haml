%div{:id => 'overview_header', :class => 'header_container'}
  %div{:id => 'overview_search'}
    %ul{:class => 'alphabet_nav'}
      - ('A'..'Z').each do |letter|
        %li
          %a{:href => "##{letter}", :class => 'button dark'}= letter
    %form{:action => '/', :method => 'get'}
      %div
        = text_field_tag :query, nil, :placeholder => 'Search for a repair...'
        %a{:href => '#clear', :class => 'button clear'} X
        %a{:href => '#next', :class => 'button next'} >
        %a{:href => '#prev', :class => 'button prev'} <
        %img{:src => 'images/loading.gif', :alt => 'Loading...', :class => 'loading'}
  %ul{:class => 'overview_action_nav button_nav'}
    %li
      %a{:href => '#new', :class => 'button new'} New Repair
%ul{:id => 'overview_nav', :class => 'tab_nav'}
  %li
    %a{:href => '#overview_results', :class => 'overview_results selected'} Search Results
%div{:id => 'overview_pages', :class => 'page_container'}
  %div{:id => 'overview_results'}
    = render :partial => 'overview_results'