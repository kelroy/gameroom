%div{:id => 'till', :class => 'modal'}
  %h2 Select a till...
  = form_for :tills, :url => '#tills' do |t|
    %ul
      %li
        = t.select :id, current_user.tills.all.map { |till| [till.title, till.id] }
    %ul
      %li
        %ul{:id => 'till_nav', :class => 'button_nav'}
          %li
            = link_to "Cancel", logout_path, :method => :delete, :class => 'cancel button'
          %li
            %a{:href => '#select', :class => 'select button'} Select