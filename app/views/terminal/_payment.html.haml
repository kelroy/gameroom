%div{:id => 'payment_action', :class => 'payment_line'}
  = form_for :payment_action, :method => 'get', :url => root_path do |f|
    %ul{:id => 'payment_change_container'}
      %li
        %span{:class => 'payment_symbol'} =
      %li
        %span{:id => 'payment_change', :class => 'payment_pill'} Change Due: $0.00
    %ul{:id => 'payment_scale_container'}
      %li
        %span{:class => 'payment_pill'} Credit Applied
      %li{:id => 'payment_scale_store_credit'}
        = f.text_field :credit_value, :placeholder => '0.00', :class => 'payment', :"data-payment-form" => 'store_credit'
      - (1..11).each do |n|
        %li
          %a{:href => '#payment_scale', :class => 'button dark'} *
      %li{:id => 'payment_scale_cash'}
        = f.text_field :cash_value, :placeholder => '0.00', :class => 'payment', :"data-payment-form" => 'cash'
      %li 
        %span{:class => 'payment_pill'} Cash Given