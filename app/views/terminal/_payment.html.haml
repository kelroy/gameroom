%div{:id => 'payment_total', :class => 'payment_line'}
  %ul
    %li
      %span{:class => 'payment_cart_items'} 0 item(s) in cart
    %li
      %span{:class => 'payment_symbol'} =
    %li
      %span{:class => 'payment_pill'}  $0.00 ($0.00)
    %li
      %span{:class => 'payment_symbol'} +
    %li
      %span{:class => 'payment_pill'} Tax: $0.00
    %li
      %span{:class => 'payment_symbol'} =
    %li 
      %span{:class => 'payment_pill'} Total: $0.00
%div{:class => 'payment_divider'}
  %span{:class => 'payment_symbol'} -
%div{:id => 'payment_store_credit', :class => 'payment_line'}
  %h3 Store Credit
  %ul
    %li
      %span{:class => 'payment_customer_credit'} First Last: $100.00
    %li
      %a{:href => '#apply', :class => 'button'} Apply
    %li
      %a{:href => '#clear', :class => 'button'} Clear
    %li
      = form_for :store_credit, :url => root_path do |f|
        %div
          = f.text_field :amount, :placeholder => '0.00'
%div{:class => 'payment_divider'}
