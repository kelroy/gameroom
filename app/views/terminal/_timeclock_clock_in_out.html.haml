%div{:id => 'clock_in_out', :class => 'modal'}
  %h2 Clock In / Out
  %form{:action => '#clock_in_out', :id => 'clock_in_out', :method => 'get'}
    %ul
      %li
        = label_tag :employee
        = #select_tag :employee, options_for_select(@employees.map { |employee| ["#{employee.person.first_name} #{employee.person.last_name}", employee.id] })
    %ul
      %li
        = label_tag :pin, "PIN"
        = password_field_tag :pin
    %ul
      %li
        %ul{:id => 'clock_in_out_nav', :class => 'button_nav'}
          %li
            %a{:href => '#cancel', :class => 'cancel button'} Cancel
          %li
            %a{:href => '#clock_in_out', :class => 'clock_in_out button'} Clock In / Out