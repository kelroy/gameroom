.main_container
  %header
    %hgroup
      %h1 GAMEROOM
      %h2 1709 O St. Lincoln NE 68508 402-438-7161
    - if current_user
      %ul{:class => 'link_nav'}
        %li{:class => 'current_user_login'}= current_user.login
        %li &#124;
        %li{:class => 'current_user_till'}
        %li &#124;
        %li
          = link_to "Logout", logout_path, :method => :delete
  .section_container
    %ul{:class => 'drop_nav'}
      %li
        %a{:href => '#hold', :class => 'button'} Hold
      %li
        %a{:href => '#load', :class => 'button'} Recall
      %li
        %a{:href => '#reset', :class => 'button'} Reset
    %section{:id => 'customer'}
      = render :partial => 'customer'
    %section{:id => 'cart'}
      = render :partial => 'cart'
    %section{:id => 'payment'}
      = render :partial => 'payment'
    %section{:id => 'review'}
      = render :partial => 'review'
%footer
  = render :partial => 'footer'
