%div
  .time
    FROM:
    =Time.parse(@start_date.to_s).strftime("%A, %B %d, %Y")
    %br/
    TO:
    =Time.parse(@end_date.to_s).strftime("%A, %B %d, %Y")
.left
  %table
    %thead
      %tr
        %th
          PAID TO GAMEROOM FOR MERCHANDISE
    %tr
      %td
        STORE CREDIT
      %td.money_positive=Currency.to_s_no_symb @report.positive['store_credit'].to_f
    %tr
      %td
      %td
    %tr
      %td
        CHECK
      %td.money_positive=Currency.to_s_no_symb @report.positive['check'].to_f
    %tr
      %td
        GIFT CARD
      %td.money_positive=Currency.to_s_no_symb @report.positive['gift_card'].to_f
      %tr
        %td
          CREDIT CARD
        %td.money_positive=Currency.to_s_no_symb @report.positive['credit_card'].to_f
        %tr
          %td
            CASH
          %td.money_positive=Currency.to_s_no_symb @report.positive['cash'].to_f
        %tr
          %td
          %td
        %tr
          %td
            CASH TOTALS
          %td.money_positive
            =Currency.to_s_no_symb(@report.positive['cash'].to_f + @report.positive['credit_card'].to_f + @report.positive['check'].to_f + @report.positive['gift_card'].to_f)
        %tr
          %td
            TAX COLLECTED
          %td.money_positive
            =Currency.to_s_no_symb(@report.positive[:tax].to_f)
.right
  %table.payout
    %thead
      %tr
        %th
          PAID OUT TO CUSTOMER FOR MERCHANDISE
    %tr
      %td
        STORE CREDIT
      %td.money_neg=Currency.to_s_no_symb @report.negative['store_credit'].to_f.abs
    %tr
      %td
      %td
    %tr
      %td
        CHECK
      %td.money_neg=Currency.to_s_no_symb @report.negative['check'].to_f.abs
    %tr
      %td
        GIFT CARD
      %td.money_neg=Currency.to_s_no_symb @report.negative['gift_card'].to_f.abs
    %tr
      %td
        CREDIT CARD
      %td.money_neg=Currency.to_s_no_symb @report.negative['credit_card'].to_f.abs
    %tr
      %td
        CASH
      %td.money_neg=Currency.to_s_no_symb @report.negative['cash'].to_f.abs
    %tr
      %td
      %td
    %tr
      %td
        CASH TOTALS
      %td.money_neg
        =Currency.to_s_no_symb((@report.negative['cash'].to_f + @report.negative['credit_card'].to_f + @report.negative['check'].to_f + @report.negative['gift_card'].to_f).abs)
