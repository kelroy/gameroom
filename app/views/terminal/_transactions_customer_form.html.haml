%form{:action => '#transactions_customer', :method => 'get'}
  %ul
    %li
      = label_tag :first_name, "First Name"
      = text_field_tag :first_name, :required => true
    %li
      = label_tag :last_name, "Last Name"
      = text_field_tag :last_name, :required => true
    %li
      = label_tag :middle_name, "Middle Name"
      = text_field_tag :middle_name
    %li
      = label_tag :date_of_birth, "Date of Birth"
      = select_date Date.today, :prefix => :date_of_birth, :start_year => Time.now.year - 100, :end_year => Time.now.year
  %ul
    %li
      = label_tag :address, "Address"
      = text_field_tag :address
  %ul
    %li
      = label_tag :phone, "Phone Number"
      = text_field_tag :phone, nil, :required => true
    %li
      = label_tag :email, "Email Address"
      = email_field_tag :email, nil, :required => true
    %li
      = label_tag :drivers_license, "Drivers License"
      = text_field_tag :drivers_license, nil, :required => true
  %ul
    %li
      = label_tag :credit, "Store Credit"
      = text_field_tag :credit, nil, :disabled => true
    %li
      = label_tag :flagged
      = check_box_tag :flagged, 1
  %ul
    %li
      = label_tag :notes
      = text_area_tag :notes, nil, :rows => 4, :cols => 100
      = hidden_field_tag :id, 0
  %ul
    %li
      %ul{:class => 'button_nav'}
        %li
          %a{:href => '#clear', :class => 'button clear'} Clear
        %li
          %a{:href => '#save', :class => 'button save'} Save